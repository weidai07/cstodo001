@using ToDoList.Models;

<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Item item in Model)
  {
    
      int num = item.Id;
    
    <li><a href="/items/@item.Id">@item.Description</a></li>
  }
</ul>

<a href="/items/new">Add a new item.</a>

<br>
<br>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>

<h1>Search a list item by its ID number</h3>
<form action="/items/{id}" method="post">
  <label for="id">ID number</label>
  <input id="id" name="id" type="number">
  <button type="submit">See your item</button>
</form>